<h2>User info</h2>
<table class="table">
  <tbody>
    <tr><%= attachment_image_tag current_user, :profile_image, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size: "100x100" %>
    </tr>
  <tr>
    <th>name</th>
    <th><%= current_user.name %></th>
  </tr>
  <tr>
    <th>introduction</th>
    <th><%= current_user.introduction %></th>
  </tr>
  <tr>
    <th>follows</th>
    <th>
      <%= link_to user_following_path(current_user.id) do %>
        <%= current_user.follower.count %>
      <% end %>
    </th>
  </tr>
  <tr>
    <th>followers</th>
    <th>
      <%= link_to user_followers_path(current_user.id) do %>
        <%= current_user.followed.count %>
      <% end %>
    </th>
  </tr>
  </tbody>
</table>
<div class="row">
  <%= link_to edit_user_path(current_user.id), class: "col-xs-12 btn btn-default" do %>
    <span class="glyphicon glyphicon-wrench"></span>
  <% end %>
</div>