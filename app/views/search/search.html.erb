<div class="row">
  <div class="col-xs-12">
    <% if @user_or_book == "1" %>
      <h2>Users search for '<%= @search_word %>'</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Name</th>
            <th>Introduction</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= attachment_image_tag user, :profile_image, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size: "40x40" %>
            </td>
            <td>
              <%= link_to user_path(user.id) do %>
                <span><%= user.name %></span>
              <% end %>
            </td>
            <td><%= user.introduction %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% end%>

    <% if @user_or_book == "2" %>
      <h2>Books search for '<%= @search_word %>'</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= attachment_image_tag book.user, :profile_image, format: 'jpeg', class: "pull-left profile-img", fallback: "no_image.jpg", size: "40x40" %>
            </td>
            <td>
              <%= link_to book_path(book.id) do %>
                <span><%= book.title %></span>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <% end%>

  </div>
</div>